{
  "name": "miscom-server",
  "version": "1.0.0",
  "main": "dist/server.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --transpile-only --ignore-watch node_modules --env-file=.env src/server.ts",
    "prod:vercel": "yarn build && vercel --prod",
    "start": "cross-env NODE_ENV=production node --env-file=.env dist/server.js",
    "lint": "eslint --ext .ts src --fix",
    "format": "prettier --write src/**/*.ts",
    "prod:start": "yarn build && pm2 start ecosystem.config.js --env production",
    "prod:stop": "pm2 stop ecosystem.config.js",
    "prod:delete": "pm2 delete ecosystem.config.js",
    "prod:restart": "pm2 restart ecosystem.config.js",
    "prod:logs": "pm2 logs ecosystem.config.js",
    "prod:list": "pm2 list"
  },
  "dependencies": {
    "@prisma/client": "^6.8.2",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "http-status": "^2.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.2",
    "node-cache": "^5.1.2",
    "nodemailer": "^7.0.3",
    "slugify": "^1.6.6",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.15.19",
    "@types/nodemailer": "^6.4.17",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "prisma": "^6.8.2",
    "swagger-typescript-api": "^13.2.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}
